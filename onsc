function on(){
  $p=Sav("Pin");
  $res=Curl("https://faucetone.my.id/admin/password/",h());
  $us=explode('"',explode('<input type="hidden" name="pin" class="form-control" value="',$res)[1])[0];
  $res=Curl("https://faucetone.my.id/admin/function/data.php",h());
  $li=explode('</td>',explode('</td><td>',$res)[1])[0];
  $no=explode("</td>",explode("$li</td><td>",$res)[1])[0];
  $on=explode("</td>",explode("$no</td><td>",$res)[1])[0];
  if($on=="Non-aktif"){
    echo "\033[1;91mScript off silahkan hubungi admin\n";
    exit;
  }
  $res=Curl("https://faucetone.my.id/admin/function/status.php",h());
  $ip=explode("</",explode("<td>$us</td><td>",$res)[1])[0];
  if($ip=="1"){
    $status="ON";
  }else{
    system('clear');
    ban1();
    echo ("\033[1;97m Please Aktivasi SCüôè\n");
    sleep(2);
    system("termux-open $li");
    exit;
  }
  return $status;
}
on();
